{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "base_django:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				//
				"buildArgs": {
					"UID": "1000"
				},
				"pull": true
			}
		},
		{
			"type": "shell",
			"label": "docker-run: debug",
			"command": "docker-compose",
			"args": [
				"-f",
				"${workspaceFolder}/docker-compose.yml",
				"up"
			],
			"dependsOn": [
				"docker-build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			}
		}
		
		
		
	]
}